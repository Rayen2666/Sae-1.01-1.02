<Window x:Class="Sae_1._01_1._02.Difficulté"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sae_1._01_1._02"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Difficulté" Height="450" Width="800">
    <Grid>
        <ComboBox 
            Name="choix_difficulte"  VerticalAlignment="Center"                      
            HorizontalAlignment="Center"  Width="120">
            <ComboBoxItem IsSelected="True" Name="Facile">Facile</ComboBoxItem>
            <ComboBoxItem Name="Moyen">Moyen</ComboBoxItem>
            <ComboBoxItem  Name="Difficile">Difficile</ComboBoxItem>

        </ComboBox>
        <Label Content="Veuillez choisir un niveau de difficulté :" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" Width="220"/>
        <Button Content="Sélectionner" HorizontalAlignment="Left" Height="39" Margin="302,268,0,0" VerticalAlignment="Top" Width="181" Click="Selection"/>
    </Grid>
</Window>
